//QUESTION 2
/*
#include <stdio.h>
#include <math.h>
#define euler 2,71828

int main(void)
{
	double P0, r, P;
	printf("Enter starting population: ");
	scanf("%lf", &P0);
	printf("Enter rate of growth in percent: ");
	scanf("%lf", &r);
	r = r / 100;

	P = P0 + pow((euler), (r*10));
	printf("\nFinal population after 10 years %lf", P);

	return 0;
}
*/

